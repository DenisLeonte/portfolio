---
interface Props {
  templateName: string;
  slug: string;
}

const { templateName, slug } = Astro.props;
---

<div class="demo-bar" role="banner" aria-label="Template demo bar">
  <a href="/showcase" class="demo-bar__back" aria-label="Back to Showcase">
    <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
      <path d="M9 2L4 7L9 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    Showcase
  </a>

  <div class="demo-bar__badge" aria-label="Template demo information">
    <span class="demo-bar__diamond" aria-hidden="true">⬥</span>
    <span>Template Demo · Built by <strong>Leonte Denis</strong></span>
  </div>

  <a href="/#contact" class="demo-bar__cta" aria-label="Contact Leonte Denis">
    Like this? Let's talk
    <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
      <path d="M5 2L10 7L5 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </a>
</div>

<style>
  .demo-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 9999;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 16px;
    background: rgba(8, 8, 8, 0.92);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(0, 255, 65, 0.15);
    font-family: 'JetBrains Mono', 'Fira Code', 'Courier New', monospace;
    font-size: 11px;
    letter-spacing: 0.03em;
  }

  .demo-bar__back,
  .demo-bar__cta {
    display: flex;
    align-items: center;
    gap: 5px;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .demo-bar__back:hover {
    color: #00ff41;
  }

  .demo-bar__cta:hover {
    color: #00ff41;
  }

  .demo-bar__badge {
    display: flex;
    align-items: center;
    gap: 6px;
    color: rgba(255, 255, 255, 0.4);
    font-size: 10px;
    text-align: center;
  }

  .demo-bar__diamond {
    color: rgba(0, 255, 65, 0.5);
    font-size: 8px;
  }

  .demo-bar__badge strong {
    color: rgba(255, 255, 255, 0.7);
    font-weight: 600;
  }

  @media (max-width: 480px) {
    .demo-bar__badge {
      display: none;
    }

    .demo-bar__cta {
      font-size: 10px;
    }
  }
</style>
