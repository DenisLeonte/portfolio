---
import profile from '../data/profile.json';
import ContactForm from './ContactForm.tsx';

const hasEmailJS = !!(
  import.meta.env.PUBLIC_EMAILJS_SERVICE_ID &&
  import.meta.env.PUBLIC_EMAILJS_TEMPLATE_ID &&
  import.meta.env.PUBLIC_EMAILJS_PUBLIC_KEY
);
---
<section id="contact" class="section-wrapper">
  <div class="bg-pulse-rings" aria-hidden="true">
    <span></span><span></span><span></span>
  </div>
  <div class="container mx-auto">
    <p class="section-label gsap-hidden">05. Contact</p>
    <h2 class="section-title gsap-hidden">
      Let's <span>Connect</span>
    </h2>
    <p class="gsap-hidden mb-12" style="color: var(--text-secondary); max-width: 36rem; font-size: 0.9rem;">
      Have a project in mind, want to collaborate, or just want to say hi? Drop me a message — I read every one.
    </p>

    <div class="grid md:grid-cols-5 gap-12 items-start">
      <!-- Contact Form — left (3/5) -->
      <div class="md:col-span-3 gsap-hidden">
        <div class="glass-card p-6 md:p-8">
          <!-- Terminal header bar -->
          <div
            class="flex items-center gap-2 mb-6 pb-4"
            style="border-bottom: 1px solid var(--border-green);"
          >
            <div class="flex gap-1.5">
              <div class="w-3 h-3 rounded-full" style="background: rgba(255,80,80,0.6);"></div>
              <div class="w-3 h-3 rounded-full" style="background: rgba(255,200,80,0.6);"></div>
              <div class="w-3 h-3 rounded-full" style="background: rgba(0,255,65,0.6);"></div>
            </div>
            <span class="text-xs ml-2" style="color: var(--text-secondary); letter-spacing: 0.08em;">
              ~ send-message
            </span>
          </div>

          {!hasEmailJS ? (
            <!-- Placeholder when EmailJS not configured -->
            <div
              class="text-center py-8"
              style="border: 1px dashed rgba(0,255,65,0.15); border-radius: 6px;"
            >
              <p class="text-sm mb-3" style="color: var(--text-secondary);">
                Configure EmailJS to enable the contact form.
              </p>
              <p class="text-xs" style="color: var(--green-muted);">
                Copy <code>.env.example</code> → <code>.env</code> and add your EmailJS credentials.
              </p>
            </div>
          ) : (
            <ContactForm client:idle />
          )}
        </div>
      </div>

      <!-- Contact Info — right (2/5) -->
      <div class="md:col-span-2 flex flex-col gap-6">
        <!-- Direct email -->
        {profile.email && !profile.email.startsWith('[') && (
          <div class="gsap-hidden">
            <p class="text-xs tracking-widest uppercase mb-2" style="color: var(--green-muted);">// Email</p>
            <a
              href={`mailto:${profile.email}`}
              class="text-sm hover:text-green-primary transition-colors break-all"
              style="color: var(--text-secondary);"
            >
              {profile.email}
            </a>
          </div>
        )}

        <!-- Social Links -->
        <div class="gsap-hidden">
          <p class="text-xs tracking-widest uppercase mb-4" style="color: var(--green-muted);">// Social</p>
          <div class="flex gap-3">
            <!-- GitHub -->
            {profile.socialLinks.github && !profile.socialLinks.github.startsWith('[') && (
              <a
                href={profile.socialLinks.github}
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
                aria-label="GitHub Profile"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}

            <!-- LinkedIn -->
            {profile.socialLinks.linkedin && !profile.socialLinks.linkedin.startsWith('[') && (
              <a
                href={profile.socialLinks.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
                aria-label="LinkedIn Profile"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            )}
          </div>
        </div>

        <!-- Availability status -->
        <div
          class="gsap-hidden glass-card p-5"
          style="border-color: rgba(0,255,65,0.15);"
        >
          <div class="flex items-center gap-3 mb-2">
            <div
              class="w-2 h-2 rounded-full"
              style="background: var(--green-primary); box-shadow: 0 0 8px rgba(0,255,65,0.6); animation: pulseGlow 2s ease-in-out infinite;"
            ></div>
            <span class="text-sm font-medium" style="color: #fff;">Open to opportunities</span>
          </div>
          <p class="text-xs leading-relaxed" style="color: var(--text-secondary);">
            Available for freelance projects, full-time roles, and interesting collaborations.
          </p>
        </div>

        <!-- Response time note -->
        <p class="text-xs gsap-hidden" style="color: var(--text-secondary); opacity: 0.6;">
          // Typical response time: 24–48 hours
        </p>
      </div>
    </div>
  </div>
</section>
