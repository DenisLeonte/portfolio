---
import projects from '../data/projects.json';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const featuredProjects = projects.filter((p) => p.featured);
const otherProjects = projects.filter((p) => !p.featured);
---

<section id="projects" class="section-wrapper">
  <div class="container mx-auto">
    <p class="section-label gsap-hidden">03. Projects</p>
    <h2 class="section-title gsap-hidden">
      What I've <span>Built</span>
    </h2>
    <p class="gsap-hidden mb-12" style="color: var(--text-secondary); max-width: 36rem; font-size: 0.9rem;">
      A selection of projects that showcase my work across backend systems, frontend interfaces, and data pipelines.
    </p>

    <!-- Featured Projects -->
    {featuredProjects.length > 0 && (
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        {featuredProjects.map((project) => (
          <article
            class="project-card glass-card group"
            style="opacity: 0; transform: translateY(40px); display: flex; flex-direction: column;"
          >
            <!-- Project image / placeholder -->
            <div
              class="relative overflow-hidden"
              style="aspect-ratio: 16/9; background: rgba(0,255,65,0.03); border-bottom: 1px solid var(--border-green);"
            >
              {project.image && !project.image.includes('[') ? (
                <img
                  src={`${base}${project.image}`}
                  alt={`${project.name} screenshot`}
                  loading="lazy"
                  decoding="async"
                  class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity duration-300"
                />
              ) : (
                <div
                  class="w-full h-full flex items-center justify-center"
                  style="background: repeating-linear-gradient(45deg, rgba(0,255,65,0.02) 0px, rgba(0,255,65,0.02) 1px, transparent 1px, transparent 8px);"
                  aria-hidden="true"
                >
                  <div class="text-center" style="color: var(--green-muted);">
                    <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" opacity="0.4">
                      <rect x="2" y="3" width="20" height="14" rx="2"/>
                      <path d="m8 21 4-4 4 4"/>
                      <path d="M12 17v4"/>
                    </svg>
                    <div class="text-xs mt-2 tracking-widest uppercase opacity-50">Screenshot</div>
                  </div>
                </div>
              )}

              <!-- Featured badge -->
              <div
                class="absolute top-3 right-3"
                style="background: rgba(0,255,65,0.1); border: 1px solid rgba(0,255,65,0.25); padding: 0.25rem 0.6rem; border-radius: 3px; font-size: 0.65rem; color: var(--green-primary); letter-spacing: 0.1em; text-transform: uppercase;"
              >
                Featured
              </div>
            </div>

            <!-- Card Body -->
            <div class="p-6 flex flex-col gap-4 flex-1">
              <!-- Project Name -->
              <div>
                <h3
                  class="text-xl font-bold text-white group-hover:text-green-primary transition-colors"
                  style="color: #fff; letter-spacing: -0.02em;"
                >
                  {project.name.startsWith('[') ? (
                    <span style="color: var(--green-muted); font-size: 0.9rem; font-weight: normal; font-style: italic;">
                      // Project name coming soon â€” update projects.json
                    </span>
                  ) : (
                    project.name
                  )}
                </h3>
              </div>

              <!-- Description -->
              <p
                class="text-sm leading-relaxed flex-1"
                style="color: var(--text-secondary);"
              >
                {project.description.startsWith('[') ? (
                  <span style="opacity: 0.5; font-style: italic;">
                    Add your project description to src/data/projects.json
                  </span>
                ) : (
                  project.description
                )}
              </p>

              <!-- Tech Stack -->
              <div class="flex flex-wrap gap-2">
                {project.techStack.map((tech) => (
                  <span class="tech-badge">
                    {tech.startsWith('[') ? '?' : tech}
                  </span>
                ))}
              </div>

              <!-- Links -->
              <div class="flex gap-3 pt-2 border-t" style="border-color: var(--border-green);">
                {project.githubUrl && !project.githubUrl.startsWith('[') && (
                  <a
                    href={project.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn-secondary"
                    style="padding: 0.5rem 1rem; font-size: 0.75rem;"
                    aria-label={`View ${project.name} source code on GitHub`}
                  >
                    <svg width="15" height="15" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    GitHub
                  </a>
                )}
                {project.liveUrl && !project.liveUrl.startsWith('[') && (
                  <a
                    href={project.liveUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn-primary"
                    style="padding: 0.5rem 1rem; font-size: 0.75rem;"
                    aria-label={`View ${project.name} live demo`}
                  >
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                      <polyline points="15 3 21 3 21 9"/>
                      <line x1="10" y1="14" x2="21" y2="3"/>
                    </svg>
                    Live Demo
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    )}

    <!-- Other Projects (if any) -->
    {otherProjects.length > 0 && (
      <div>
        <h3
          class="text-sm tracking-widest uppercase mb-6 gsap-hidden"
          style="color: var(--text-secondary);"
        >
          // Other Projects
        </h3>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {otherProjects.map((project) => (
            <article class="project-card glass-card p-5 group" style="opacity: 0; transform: translateY(30px);">
              <h3
                class="text-base font-bold mb-2 group-hover:text-green-primary transition-colors"
                style="color: #fff;"
              >
                {project.name}
              </h3>
              <p class="text-sm mb-4" style="color: var(--text-secondary);">
                {project.description}
              </p>
              <div class="flex flex-wrap gap-1 mb-4">
                {project.techStack.map((tech) => (
                  <span class="tech-badge">{tech}</span>
                ))}
              </div>
              <div class="flex gap-3">
                {project.githubUrl && !project.githubUrl.startsWith('[') && (
                  <a href={project.githubUrl} target="_blank" rel="noopener noreferrer" class="btn-secondary" style="padding: 0.35rem 0.75rem; font-size: 0.7rem;">
                    GitHub
                  </a>
                )}
                {project.liveUrl && !project.liveUrl.startsWith('[') && (
                  <a href={project.liveUrl} target="_blank" rel="noopener noreferrer" class="btn-primary" style="padding: 0.35rem 0.75rem; font-size: 0.7rem;">
                    Demo
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      </div>
    )}

    <!-- Empty state (when only placeholder project) -->
    {projects.every(p => p.name.startsWith('[')) && (
      <div
        class="text-center py-16"
        style="border: 1px dashed rgba(0,255,65,0.15); border-radius: 8px;"
      >
        <div style="color: var(--green-muted); font-size: 2rem; margin-bottom: 1rem;">{ }</div>
        <p style="color: var(--text-secondary); font-size: 0.875rem;">
          Add your projects to <code style="color: var(--green-primary);">src/data/projects.json</code>
        </p>
      </div>
    )}
  </div>
</section>
