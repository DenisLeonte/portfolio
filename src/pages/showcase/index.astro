---
import Layout from '../../layouts/Layout.astro';
import showcase from '../../data/showcase.json';
---

<Layout title="Showcase — What I Can Build" description="A curated gallery of website templates built from scratch — restaurant, e-commerce, agency, blog, and real estate designs.">
  <!-- Neon perspective grid background -->
  <canvas id="grid-canvas" class="grid-overlay" aria-hidden="true"></canvas>

  <!-- Floating back button -->
  <a href="/" class="back-btn" aria-label="Back to portfolio">
    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
      <path d="M10 3L5 8L10 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    Portfolio
  </a>

  <!-- Hero Section -->
  <section class="showcase-hero section-wrapper">
    <div class="container mx-auto">
      <p class="section-label gsap-hidden">00. Showcase</p>
      <h1 class="showcase-title gsap-hidden">
        What I Can <span class="text-green-primary">Build</span>
      </h1>
      <p class="showcase-subtitle gsap-hidden">
        Each template below is a fully interactive mini-site — designed and coded from scratch with
        distinct aesthetics, real animations, and production-quality UI. No themes, no page builders.
      </p>
      <p class="showcase-cta-copy gsap-hidden">
        Need something custom?
        <a href="/contact" class="inline-link">Let's talk →</a>
      </p>
    </div>
  </section>

  <!-- Card Grid -->
  <section class="showcase-grid-section section-wrapper">
    <div class="container mx-auto">
      <div class="showcase-grid">
        {showcase.map((entry) => (
          <a href={`/showcase/${entry.slug}`} class="showcase-card glass-card" aria-label={`View ${entry.name} template`}>
            <!-- Thumbnail -->
            <div
              class="showcase-thumb"
              style={`background: linear-gradient(135deg, ${entry.colorPreview}20, ${entry.colorPreview}60);`}
              aria-hidden="true"
            >
              {entry.preview ? (
                <img
                  src={entry.preview}
                  alt={`${entry.name} template preview`}
                  class="showcase-thumb__img"
                  loading="lazy"
                />
              ) : (
                <span class="showcase-thumb__letter" style={`color: ${entry.colorPreview};`}>
                  {entry.name.charAt(0)}
                </span>
              )}
              <div class="showcase-thumb__overlay">
                <span class="showcase-thumb__view">View Template →</span>
              </div>
            </div>

            <!-- Card body -->
            <div class="showcase-card__body">
              <div class="showcase-card__meta">
                <span class="showcase-card__category">{entry.category}</span>
              </div>
              <h2 class="showcase-card__name">{entry.name}</h2>
              <p class="showcase-card__desc">{entry.description}</p>
              <div class="showcase-card__tech">
                {entry.techHighlights.map((tech) => (
                  <span class="tech-badge">{tech}</span>
                ))}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Bottom CTA -->
  <section class="showcase-bottom section-wrapper">
    <div class="container mx-auto text-center">
      <p class="showcase-bottom__text">
        Each template is designed and built from scratch — no themes, no page builders.
      </p>
      <a href="/contact" class="btn-primary">Get In Touch →</a>
    </div>
  </section>
</Layout>

<style>
  /* ── Back button ─────────────────────────────────────────────── */
  .back-btn {
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 100;
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    background: rgba(8, 8, 8, 0.85);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(0, 255, 65, 0.2);
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.7);
    font-family: 'JetBrains Mono', monospace;
    font-size: 12px;
    text-decoration: none;
    letter-spacing: 0.04em;
    transition: color 0.2s ease, border-color 0.2s ease, background 0.2s ease;
  }

  .back-btn:hover {
    color: #00ff41;
    border-color: rgba(0, 255, 65, 0.5);
    background: rgba(0, 255, 65, 0.05);
  }

  /* ── Hero ────────────────────────────────────────────────────── */
  .showcase-hero {
    padding-top: 120px;
    padding-bottom: 60px;
  }

  .showcase-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 16px 0 24px;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .showcase-subtitle {
    max-width: 600px;
    font-size: 1.05rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 20px;
  }

  .showcase-cta-copy {
    font-size: 0.95rem;
    color: var(--text-secondary);
  }

  .inline-link {
    color: var(--green-primary);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .inline-link:hover {
    opacity: 0.75;
  }

  /* ── Grid ────────────────────────────────────────────────────── */
  .showcase-grid-section {
    padding-top: 20px;
    padding-bottom: 80px;
  }

  .showcase-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 640px) {
    .showcase-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .showcase-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* ── Card ────────────────────────────────────────────────────── */
  .showcase-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .showcase-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.4);
  }

  /* Thumbnail */
  .showcase-thumb {
    aspect-ratio: 16 / 9;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .showcase-thumb__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.4s ease;
  }

  .showcase-card:hover .showcase-thumb__img {
    transform: scale(1.04);
  }

  .showcase-thumb__letter {
    font-size: 5rem;
    font-weight: 700;
    line-height: 1;
    opacity: 0.7;
    transition: opacity 0.3s ease, transform 0.3s ease;
    font-family: 'JetBrains Mono', monospace;
  }

  .showcase-thumb__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .showcase-thumb__view {
    color: white;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    letter-spacing: 0.06em;
    border: 1px solid rgba(255, 255, 255, 0.4);
    padding: 8px 16px;
    border-radius: 4px;
  }

  .showcase-card:hover .showcase-thumb__overlay {
    opacity: 1;
  }

  .showcase-card:hover .showcase-thumb__letter {
    opacity: 0.3;
    transform: scale(1.1);
  }

  /* Card body */
  .showcase-card__body {
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .showcase-card__meta {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .showcase-card__category {
    font-size: 10px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--green-primary);
    opacity: 0.8;
    font-family: 'JetBrains Mono', monospace;
  }

  .showcase-card__name {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .showcase-card__desc {
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.6;
    flex: 1;
    margin: 0;
  }

  .showcase-card__tech {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 4px;
  }

  /* ── Bottom CTA ──────────────────────────────────────────────── */
  .showcase-bottom {
    padding-top: 20px;
    padding-bottom: 100px;
  }

  .showcase-bottom__text {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 32px;
    max-width: 560px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.7;
  }

  /* ── Neon perspective grid overlay ───────────────────────────── */
  .grid-overlay {
    position: fixed;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
  }

  @media (prefers-reduced-motion: reduce) {
    .grid-overlay {
      display: none;
    }
  }
</style>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Hero elements animate in on load
  const heroElements = document.querySelectorAll('.showcase-hero .gsap-hidden');
  if (heroElements.length) {
    gsap.set(heroElements, { opacity: 0, y: 30 });
    gsap.to(heroElements, {
      opacity: 1,
      y: 0,
      duration: 0.7,
      stagger: 0.15,
      ease: 'power3.out',
      delay: 0.2,
    });
  }

  // Cards animate in on scroll
  const cards = document.querySelectorAll('.showcase-card');
  if (cards.length) {
    gsap.set(cards, { opacity: 0, y: 40 });
    gsap.to(cards, {
      scrollTrigger: {
        trigger: '.showcase-grid',
        start: 'top 80%',
      },
      opacity: 1,
      y: 0,
      duration: 0.6,
      stagger: 0.1,
      ease: 'power3.out',
    });
  }

  // ── Neon perspective grid canvas ─────────────────────────────────
  const gridCanvas = document.getElementById('grid-canvas') as HTMLCanvasElement | null;
  if (gridCanvas) {
    const ctx = gridCanvas.getContext('2d');
    if (ctx) {
      let width = 0;
      let height = 0;

      const resize = () => {
        width = gridCanvas.width = window.innerWidth;
        height = gridCanvas.height = window.innerHeight;
      };
      resize();
      window.addEventListener('resize', resize);

      // Config
      const N_V       = 20;    // number of vertical lines
      const N_H       = 16;    // number of horizontal line slots
      const VPY_RATIO = 0.45;  // vanishing-point y as a fraction of screen height
      const OVERFLOW  = 0.4;   // how much wider than the screen the bottom of the grid is (each side)
      const COLOR     = '#00ff41';
      const MAX_ALPHA = 0.18;  // peak opacity for lines
      const SPEED     = 0.28;  // horizontal lines per second (animation rate)

      let offset   = 0;
      let lastTime = 0;
      let rafId    = 0;

      const render = (time: number) => {
        rafId = requestAnimationFrame(render);
        const dt = Math.min((time - lastTime) / 1000, 0.05);
        lastTime = time;
        offset   = (offset + SPEED * dt) % 1;

        ctx.clearRect(0, 0, width, height);

        const vpX     = width  * 0.5;
        const vpY     = height * VPY_RATIO;
        const groundH = height - vpY;

        // ── Vertical lines (static, converge to vanishing point) ──
        ctx.strokeStyle = COLOR;
        ctx.lineWidth   = 0.8;
        ctx.globalAlpha = MAX_ALPHA * 0.55;

        for (let i = 0; i <= N_V; i++) {
          const t       = i / N_V;
          const xBottom = vpX + (t - 0.5) * width * (1 + OVERFLOW * 2);
          ctx.beginPath();
          ctx.moveTo(vpX, vpY);
          ctx.lineTo(xBottom, height);
          ctx.stroke();
        }

        // ── Horizontal lines (animated, emerge from horizon) ──────
        for (let i = 0; i < N_H; i++) {
          // rawPhase ∈ [0, 1): 0 = at horizon, 1 = at viewer's feet
          const rawPhase = ((i / N_H) + offset) % 1;

          // Square maps phase to screen position with perspective compression
          // near the horizon (small rawPhase → very small screenT → near top).
          const screenT = rawPhase * rawPhase;
          if (screenT < 0.001) continue; // skip lines indistinguishable from horizon

          const y        = vpY + screenT * groundH;
          const progress = screenT;

          // X range follows the outermost vertical lines at this height
          const xLeft  = vpX - progress * width * (0.5 + OVERFLOW);
          const xRight = vpX + progress * width * (0.5 + OVERFLOW);

          ctx.globalAlpha = Math.min(screenT * MAX_ALPHA * 2.2, MAX_ALPHA);
          ctx.lineWidth   = 0.4 + screenT * 0.9;
          ctx.strokeStyle = COLOR;
          ctx.beginPath();
          ctx.moveTo(Math.max(0, xLeft),  y);
          ctx.lineTo(Math.min(width, xRight), y);
          ctx.stroke();
        }

        ctx.globalAlpha = 1;
      };

      const mq = window.matchMedia('(prefers-reduced-motion: reduce)');
      if (!mq.matches) {
        rafId = requestAnimationFrame(render);
      }
      mq.addEventListener('change', (e) => {
        if (e.matches) {
          cancelAnimationFrame(rafId);
          ctx.clearRect(0, 0, width, height);
        } else {
          lastTime = performance.now();
          rafId = requestAnimationFrame(render);
        }
      });
    }
  }
</script>
