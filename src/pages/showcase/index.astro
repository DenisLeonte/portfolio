---
import Layout from '../../layouts/Layout.astro';
import showcase from '../../data/showcase.json';
---

<Layout title="Showcase — What I Can Build" description="A curated gallery of website templates built from scratch — restaurant, e-commerce, agency, blog, and real estate designs.">
  <!-- Neon perspective grid background -->
  <canvas id="grid-canvas" class="grid-overlay" aria-hidden="true"></canvas>

  <!-- Floating back button -->
  <a href="/" class="back-btn" aria-label="Back to portfolio">
    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
      <path d="M10 3L5 8L10 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    Portfolio
  </a>

  <!-- Hero Section -->
  <section class="showcase-hero section-wrapper">
    <div class="hero-spotlight" aria-hidden="true"></div>
    <div class="container mx-auto">
      <p class="section-label gsap-hidden">00. Showcase</p>
      <h1 class="showcase-title gsap-hidden">
        What I Can <span class="text-green-primary">Build</span>
      </h1>
      <p class="showcase-subtitle gsap-hidden">
        Each template below is a fully interactive mini-site — designed and coded from scratch with
        distinct aesthetics, real animations, and production-quality UI. No themes, no page builders.
      </p>
      <p class="showcase-cta-copy gsap-hidden">
        Need something custom?
        <a href="/contact" class="inline-link">Let's talk →</a>
      </p>
    </div>
  </section>

  <!-- Card Grid -->
  <section class="showcase-grid-section section-wrapper">
    <div class="container mx-auto">
      <div class="showcase-grid" style="perspective: 1200px">
        {showcase.map((entry) => (
          <a href={`/showcase/${entry.slug}`} class="showcase-card glass-card" data-color={entry.colorPreview} aria-label={`View ${entry.name} template`}>
            <!-- Thumbnail -->
            <div
              class="showcase-thumb"
              style={`background: linear-gradient(135deg, ${entry.colorPreview}20, ${entry.colorPreview}60);`}
              aria-hidden="true"
            >
              {entry.preview ? (
                <img
                  src={entry.preview}
                  alt={`${entry.name} template preview`}
                  class="showcase-thumb__img"
                  loading="lazy"
                />
              ) : (
                <span class="showcase-thumb__letter" style={`color: ${entry.colorPreview};`}>
                  {entry.name.charAt(0)}
                </span>
              )}
              <div class="showcase-thumb__overlay">
                <span class="showcase-thumb__view">View Template →</span>
              </div>
            </div>

            <!-- Card body -->
            <div class="showcase-card__body">
              <div class="showcase-card__meta">
                <span class="showcase-card__category">{entry.category}</span>
              </div>
              <h2 class="showcase-card__name">{entry.name}</h2>
              <p class="showcase-card__desc">{entry.description}</p>
              <div class="showcase-card__tech">
                {entry.techHighlights.map((tech) => (
                  <span class="tech-badge">{tech}</span>
                ))}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Bottom CTA -->
  <section class="showcase-bottom section-wrapper">
    <div class="container mx-auto text-center">
      <p class="showcase-bottom__text">
        Each template is designed and built from scratch — no themes, no page builders.
      </p>
      <a href="/contact" class="btn-primary">Get In Touch →</a>
    </div>
  </section>
</Layout>

<style>
  /* ── Neon title pulse ────────────────────────────────────────── */
  @keyframes neonTitlePulse {
    0%, 100% {
      text-shadow:
        0 0 10px rgba(0,255,65,0.7),
        0 0 30px rgba(0,255,65,0.4),
        0 0 60px rgba(0,255,65,0.2);
    }
    50% {
      text-shadow:
        0 0 20px rgba(0,255,65,1),
        0 0 50px rgba(0,255,65,0.6),
        0 0 100px rgba(0,255,65,0.3),
        0 0 150px rgba(0,255,65,0.1);
    }
  }

  .showcase-title .text-green-primary {
    animation: neonTitlePulse 2.5s ease-in-out infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    .showcase-title .text-green-primary {
      animation: none;
      text-shadow: 0 0 20px rgba(0,255,65,0.5);
    }
  }

  /* ── Back button ─────────────────────────────────────────────── */
  .back-btn {
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 100;
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    background: rgba(8, 8, 8, 0.85);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(0, 255, 65, 0.2);
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.7);
    font-family: 'JetBrains Mono', monospace;
    font-size: 12px;
    text-decoration: none;
    letter-spacing: 0.04em;
    transition: color 0.2s ease, border-color 0.2s ease, background 0.2s ease;
  }

  .back-btn:hover {
    color: #00ff41;
    border-color: rgba(0, 255, 65, 0.5);
    background: rgba(0, 255, 65, 0.05);
  }

  /* ── Hero spotlight ──────────────────────────────────────────── */
  .hero-spotlight {
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 0;
    background: radial-gradient(
      600px circle at var(--x, 50%) var(--y, 50%),
      rgba(0, 255, 65, 0.06),
      transparent 60%
    );
  }

  .showcase-hero:hover .hero-spotlight {
    opacity: 1;
  }

  /* ── Hero ────────────────────────────────────────────────────── */
  .showcase-hero {
    padding-top: 120px;
    padding-bottom: 60px;
  }

  .showcase-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 255, 65, 0.015) 2px,
      rgba(0, 255, 65, 0.015) 4px
    );
    pointer-events: none;
    z-index: 0;
  }

  .showcase-hero .container {
    position: relative;
    z-index: 1;
  }

  .showcase-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 16px 0 24px;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .showcase-subtitle {
    max-width: 600px;
    font-size: 1.05rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 20px;
  }

  .showcase-cta-copy {
    font-size: 0.95rem;
    color: var(--text-secondary);
  }

  .inline-link {
    color: var(--green-primary);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .inline-link:hover {
    opacity: 0.75;
  }

  /* ── Grid ────────────────────────────────────────────────────── */
  .showcase-grid-section {
    padding-top: 20px;
    padding-bottom: 80px;
  }

  .showcase-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 640px) {
    .showcase-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .showcase-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* ── Card ────────────────────────────────────────────────────── */
  .showcase-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.4s ease;
    transform-style: preserve-3d;
    will-change: transform;
  }

  /* JS handles transform/box-shadow on hover — CSS hover just prevents the glass-card override */
  .showcase-card:hover {
    transform: none;
    box-shadow: none;
  }

  /* Thumbnail */
  .showcase-thumb {
    aspect-ratio: 16 / 9;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .showcase-thumb__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.4s ease;
  }

  .showcase-card:hover .showcase-thumb__img {
    transform: scale(1.04);
  }

  .showcase-thumb__letter {
    font-size: 5rem;
    font-weight: 700;
    line-height: 1;
    opacity: 0.7;
    transition: opacity 0.3s ease, transform 0.3s ease;
    font-family: 'JetBrains Mono', monospace;
  }

  .showcase-thumb__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.65);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transform: translateY(100%);
    transition: opacity 0.3s ease, transform 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .showcase-thumb__view {
    color: white;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    letter-spacing: 0.06em;
    border: 1px solid rgba(255, 255, 255, 0.4);
    padding: 8px 16px;
    border-radius: 4px;
    transform: translateY(8px);
    opacity: 0;
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1) 0.05s,
                opacity 0.3s ease 0.05s;
  }

  .showcase-card:hover .showcase-thumb__overlay {
    opacity: 1;
    transform: translateY(0);
  }

  .showcase-card:hover .showcase-thumb__view {
    transform: translateY(0);
    opacity: 1;
  }

  .showcase-card:hover .showcase-thumb__letter {
    opacity: 0.3;
    transform: scale(1.1);
  }

  /* Card body */
  .showcase-card__body {
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .showcase-card__meta {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .showcase-card__category {
    font-size: 10px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--green-primary);
    opacity: 0.8;
    font-family: 'JetBrains Mono', monospace;
  }

  .showcase-card__name {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .showcase-card__desc {
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.6;
    flex: 1;
    margin: 0;
  }

  .showcase-card__tech {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 4px;
  }

  /* ── Bottom CTA ──────────────────────────────────────────────── */
  .showcase-bottom {
    padding-top: 20px;
    padding-bottom: 100px;
  }

  .showcase-bottom__text {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 32px;
    max-width: 560px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.7;
  }

  /* ── Neon perspective grid overlay ───────────────────────────── */
  .grid-overlay {
    position: fixed;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
  }

  @media (prefers-reduced-motion: reduce) {
    .grid-overlay {
      display: none;
    }
  }
</style>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Hero elements animate in on load — dramatic scale + skew entry
  const heroElements = document.querySelectorAll('.showcase-hero .gsap-hidden');
  if (heroElements.length) {
    gsap.set(heroElements, { opacity: 0, y: 40, scale: 0.94, skewX: -1.5 });
    gsap.to(heroElements, {
      opacity: 1,
      y: 0,
      scale: 1,
      skewX: 0,
      duration: 0.8,
      stagger: 0.15,
      ease: 'power3.out',
      delay: 0.2,
    });
  }

  // Cards animate in on scroll — per-card ScrollTrigger with 3D rotateX entry
  const cards = document.querySelectorAll('.showcase-card');
  if (cards.length) {
    cards.forEach((card, i) => {
      gsap.set(card, { opacity: 0, y: 60, scale: 0.92, rotateX: 15 });
      gsap.to(card, {
        scrollTrigger: {
          trigger: card,
          start: 'top 88%',
          once: true,
        },
        opacity: 1,
        y: 0,
        scale: 1,
        rotateX: 0,
        duration: 0.65,
        delay: (i % 3) * 0.08,
        ease: 'power3.out',
      });
    });
  }

  // ── 3D card tilt + colour glow on hover ─────────────────────────
  const tiltCards = document.querySelectorAll('.showcase-card') as NodeListOf<HTMLElement>;

  tiltCards.forEach((card) => {
    const color = card.dataset.color ?? '#00ff41';

    card.addEventListener('mouseenter', () => {
      card.style.transition = 'transform 0.1s ease, box-shadow 0.3s ease';
    });

    card.addEventListener('mousemove', (e: MouseEvent) => {
      const rect = card.getBoundingClientRect();
      const cx = (e.clientX - rect.left) / rect.width  - 0.5;
      const cy = (e.clientY - rect.top)  / rect.height - 0.5;
      const MAX_TILT = 8;
      const rotY =  cx * MAX_TILT * 2;
      const rotX = -cy * MAX_TILT * 2;
      card.style.transform = `perspective(1000px) rotateX(${rotX}deg) rotateY(${rotY}deg) translateY(-8px) scale(1.02)`;
      card.style.boxShadow = `
        0 20px 60px rgba(0,0,0,0.5),
        0 0 30px ${color}40,
        0 0 60px ${color}20
      `;
    });

    card.addEventListener('mouseleave', () => {
      card.style.transition = 'transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.4s ease';
      card.style.transform = 'perspective(1000px) rotateX(0deg) rotateY(0deg) translateY(0px) scale(1)';
      card.style.boxShadow = '';
    });
  });

  // ── Hero cursor spotlight ─────────────────────────────────────────
  const heroSection = document.querySelector('.showcase-hero') as HTMLElement | null;
  const spotlight   = document.querySelector('.hero-spotlight')  as HTMLElement | null;

  if (heroSection && spotlight) {
    heroSection.addEventListener('mousemove', (e: MouseEvent) => {
      const rect = heroSection.getBoundingClientRect();
      const x = ((e.clientX - rect.left) / rect.width  * 100).toFixed(1);
      const y = ((e.clientY - rect.top)  / rect.height * 100).toFixed(1);
      spotlight.style.setProperty('--x', `${x}%`);
      spotlight.style.setProperty('--y', `${y}%`);
    });
  }

  // ── Neon perspective grid canvas ─────────────────────────────────
  const gridCanvas = document.getElementById('grid-canvas') as HTMLCanvasElement | null;
  if (gridCanvas) {
    const ctx = gridCanvas.getContext('2d');
    if (ctx) {
      let width = 0;
      let height = 0;

      // Config
      const N_V       = 24;    // number of vertical lines
      const N_H       = 20;    // number of horizontal line slots
      const VPY_RATIO = 0.42;  // vanishing-point y as a fraction of screen height
      const OVERFLOW  = 0.45;  // how much wider than the screen the bottom of the grid is (each side)
      const MAX_ALPHA = 0.38;
      const SPEED     = 0.5;   // horizontal lines per second

      // ── Color helper: t=0 (horizon)→magenta, t=0.5→cyan, t=1 (viewer)→green ──
      const depthColor = (t: number): string => {
        if (t < 0.5) {
          const u = t * 2;
          const r = Math.round(255 * (1 - u));
          const g = Math.round(255 * u);
          const b = Math.round(204 + 51 * u);
          return `rgb(${r},${g},${b})`;
        } else {
          const u = (t - 0.5) * 2;
          const b = Math.round(255 * (1 - u));
          return `rgb(0,255,${b})`;
        }
      };

      // ── Stars ────────────────────────────────────────────────────
      interface Star { x: number; y: number; r: number; baseAlpha: number; blinkSpeed: number; blinkPhase: number; }
      let stars: Star[] = [];
      const N_STARS = 80;
      const buildStars = () => {
        stars = Array.from({ length: N_STARS }, () => ({
          x:          Math.random() * width,
          y:          Math.random() * (height * VPY_RATIO * 0.85),
          r:          0.4 + Math.random() * 1.2,
          baseAlpha:  0.25 + Math.random() * 0.45,
          blinkSpeed: 0.3 + Math.random() * 1.5,
          blinkPhase: Math.random() * Math.PI * 2,
        }));
      };

      const resize = () => {
        width  = gridCanvas.width  = window.innerWidth;
        height = gridCanvas.height = window.innerHeight;
        buildStars();
      };
      resize();
      window.addEventListener('resize', resize);

      // Mouse parallax tracking
      let mouseX = 0.5;
      let mouseY = 0.5;
      window.addEventListener('mousemove', (e) => {
        mouseX = e.clientX / window.innerWidth;
        mouseY = e.clientY / window.innerHeight;
      });

      // ── Background surge state (random flashes, reduced) ────────
      const surgeLines   = new Set<number>();
      const SURGE_CHANCE = 0.001;

      // ── Wave pulse surge ─────────────────────────────────────────
      interface Pulse { startTime: number; duration: number; }
      const pulses: Pulse[] = [];
      let nextPulseAt = 0;
      const schedulePulse = (now: number) => {
        nextPulseAt = now + 3000 + Math.random() * 2500;
      };

      let offset   = 0;
      let lastTime = 0;
      let rafId    = 0;

      const render = (time: number) => {
        rafId = requestAnimationFrame(render);
        const dt = Math.min((time - lastTime) / 1000, 0.05);
        lastTime = time;
        offset   = (offset + SPEED * dt) % 1;

        // Spawn / expire pulses
        if (nextPulseAt === 0) schedulePulse(time);
        if (time >= nextPulseAt) {
          pulses.push({ startTime: time, duration: 1600 });
          schedulePulse(time);
        }
        for (let pi = pulses.length - 1; pi >= 0; pi--) {
          if (time - pulses[pi].startTime > pulses[pi].duration) pulses.splice(pi, 1);
        }

        ctx.clearRect(0, 0, width, height);

        // Vanishing point shifts subtly with mouse position
        const vpX     = width  * 0.5 + (mouseX - 0.5) * width  * 0.06;
        const vpY     = height * VPY_RATIO + (mouseY - 0.5) * height * 0.03;
        const groundH = height - vpY;

        // ── Radial glow at vanishing point (magenta/purple tint) ──
        const radialGrad = ctx.createRadialGradient(vpX, vpY, 0, vpX, vpY, height * 0.4);
        radialGrad.addColorStop(0,   'rgba(200,0,200,0.12)');
        radialGrad.addColorStop(0.5, 'rgba(0,200,220,0.05)');
        radialGrad.addColorStop(1,   'rgba(0,255,65,0)');
        ctx.fillStyle   = radialGrad;
        ctx.globalAlpha = 1;
        ctx.shadowBlur  = 0;
        ctx.fillRect(0, 0, width, height);

        // ── Stars (twinkling, sky region above horizon) ───────────
        ctx.shadowBlur = 5;
        for (const star of stars) {
          const a = star.baseAlpha + Math.sin(time * 0.001 * star.blinkSpeed + star.blinkPhase) * 0.22;
          ctx.globalAlpha = Math.max(0, a);
          ctx.fillStyle   = '#ffffff';
          ctx.shadowColor = '#88ffcc';
          ctx.beginPath();
          ctx.arc(star.x, star.y, star.r, 0, Math.PI * 2);
          ctx.fill();
        }
        ctx.shadowBlur = 0;

        // ── Retrowave Sun (semicircle with stripe cutouts) ────────
        ctx.save();
        const sunR = height * 0.135;
        const sunX = vpX;
        const sunY = vpY;

        // Outer halo
        const sunHalo = ctx.createRadialGradient(sunX, sunY, sunR * 0.6, sunX, sunY, sunR * 2.8);
        sunHalo.addColorStop(0,   'rgba(255,0,180,0.20)');
        sunHalo.addColorStop(0.5, 'rgba(255,60,0,0.07)');
        sunHalo.addColorStop(1,   'rgba(255,0,180,0)');
        ctx.globalAlpha = 1;
        ctx.fillStyle   = sunHalo;
        ctx.fillRect(0, 0, width, height);

        // Clip to upper semicircle (arch sitting on the horizon)
        ctx.beginPath();
        ctx.arc(sunX, sunY, sunR, Math.PI, 0, true);
        ctx.closePath();
        ctx.clip();

        // Gradient fill: magenta top → orange base
        const sunFill = ctx.createLinearGradient(sunX, sunY - sunR, sunX, sunY);
        sunFill.addColorStop(0,   'rgba(255,30,220,0.92)');
        sunFill.addColorStop(0.5, 'rgba(255,80,40,0.92)');
        sunFill.addColorStop(1,   'rgba(255,160,0,0.92)');
        ctx.fillStyle   = sunFill;
        ctx.globalAlpha = 1;
        ctx.fillRect(sunX - sunR, sunY - sunR, sunR * 2, sunR);

        // Horizontal stripe cutouts in lower 2/3 of sun
        ctx.globalCompositeOperation = 'destination-out';
        const stripeCount = 6;
        for (let s = 0; s < stripeCount; s++) {
          const t  = s / (stripeCount - 1);
          const sy = (sunY - sunR * 0.65) + t * sunR * 0.62;
          ctx.fillStyle = 'rgba(0,0,0,1)';
          ctx.fillRect(sunX - sunR - 1, sy, sunR * 2 + 2, sunR * 0.055);
        }
        ctx.globalCompositeOperation = 'source-over';
        ctx.restore();

        // ── Vertical lines (depth gradient: magenta→cyan→green) ───
        const vGrad = ctx.createLinearGradient(vpX, vpY, vpX, height);
        vGrad.addColorStop(0,   'rgba(255,0,204,0.58)');
        vGrad.addColorStop(0.5, 'rgba(0,255,255,0.55)');
        vGrad.addColorStop(1,   'rgba(0,255,65,0.55)');
        ctx.strokeStyle = vGrad;
        ctx.lineWidth   = 0.9;
        ctx.globalAlpha = MAX_ALPHA * 0.65;
        ctx.shadowBlur  = 6;
        ctx.shadowColor = '#00ffaa';

        for (let i = 0; i <= N_V; i++) {
          const t       = i / N_V;
          const xBottom = vpX + (t - 0.5) * width * (1 + OVERFLOW * 2);
          ctx.beginPath();
          ctx.moveTo(vpX, vpY);
          ctx.lineTo(xBottom, height);
          ctx.stroke();
        }

        // ── Horizontal lines (depth-colored + wave pulse boost) ───
        for (let i = 0; i < N_H; i++) {
          const rawPhase = ((i / N_H) + offset) % 1;
          const screenT  = rawPhase * rawPhase;
          if (screenT < 0.001) continue;

          // Random background surge
          const isSurging = surgeLines.has(i);
          if (!isSurging && Math.random() < SURGE_CHANCE) surgeLines.add(i);
          if (isSurging  && Math.random() < 0.04)         surgeLines.delete(i);

          const y      = vpY + screenT * groundH;
          const xLeft  = vpX - screenT * width * (0.5 + OVERFLOW);
          const xRight = vpX + screenT * width * (0.5 + OVERFLOW);

          // Wave pulse: cosine falloff around active pulse front
          let pulseBoost = 0;
          for (const pulse of pulses) {
            const pProgress = (time - pulse.startTime) / pulse.duration;
            const diff      = Math.abs(rawPhase - pProgress);
            const wrapDiff  = Math.min(diff, 1 - diff);
            if (wrapDiff < 0.1) {
              pulseBoost = Math.max(pulseBoost, Math.cos((wrapDiff / 0.1) * (Math.PI / 2)));
            }
          }

          const lineColor = depthColor(screenT);

          if (isSurging || pulseBoost > 0) {
            const boost     = Math.max(isSurging ? 0.6 : 0, pulseBoost);
            ctx.globalAlpha = Math.min(screenT * 2.5 + boost * 0.4, 0.88);
            ctx.lineWidth   = (0.4 + screenT * 0.9) * (1.8 + boost * 1.4);
            ctx.shadowBlur  = 14 + boost * 20;
          } else {
            ctx.globalAlpha = Math.min(screenT * MAX_ALPHA * 2.2, MAX_ALPHA);
            ctx.lineWidth   = 0.4 + screenT * 0.9;
            ctx.shadowBlur  = 6;
          }

          ctx.shadowColor = lineColor;
          ctx.strokeStyle = lineColor;
          ctx.beginPath();
          ctx.moveTo(Math.max(0, xLeft),  y);
          ctx.lineTo(Math.min(width, xRight), y);
          ctx.stroke();
        }

        ctx.globalAlpha = 1;
        ctx.shadowBlur  = 0;
      };

      const mq = window.matchMedia('(prefers-reduced-motion: reduce)');
      if (!mq.matches) {
        rafId = requestAnimationFrame(render);
      }
      mq.addEventListener('change', (e) => {
        if (e.matches) {
          cancelAnimationFrame(rafId);
          ctx.clearRect(0, 0, width, height);
        } else {
          lastTime = performance.now();
          rafId = requestAnimationFrame(render);
        }
      });
    }
  }
