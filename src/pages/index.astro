---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Skills from '../components/Skills.astro';
import Projects from '../components/Projects.astro';
import Timeline from '../components/Timeline.astro';
import Footer from '../components/Footer.astro';
import profile from '../data/profile.json';

const pageTitle = `${profile.name} â€” ${profile.title}`;
const pageDescription = `Full-Stack Software Engineer with 2+ years of experience. Spring Boot, React, Angular, AI & Big Data. Currently at Mercedes-Benz Group AG.`;
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Skip to main content (accessibility) -->
  <a
    href="#about"
    class="sr-only focus:not-sr-only focus:absolute focus:z-50 focus:p-4 focus:bg-bg-primary focus:text-green-primary focus:outline-none focus:ring-2 focus:ring-green-primary"
  >
    Skip to main content
  </a>

  <Navbar />

  <main id="main">
    <Hero />
    <About />
    <Skills />
    <Projects />
    <Timeline />

    <!-- Contact Me CTA -->
    <section id="cta" class="relative py-24 px-6 text-center overflow-hidden">
      <!-- Background rings (consistent with Contact section) -->
      <div class="bg-supernova" aria-hidden="true">
        <div class="ring-center"></div>
        <div class="ring-a"></div>
        <div class="ring-b"></div>
        <div class="core"></div>
      </div>

      <div class="container mx-auto relative z-10">
        <p class="section-label gsap-hidden">05. Get In Touch</p>
        <h2 class="section-title gsap-hidden">
          Let's <span>Work Together</span>
        </h2>
        <p
          class="gsap-hidden mx-auto mb-10"
          style="color: var(--text-secondary); max-width: 32rem; font-size: 0.95rem; line-height: 1.7;"
        >
          Have a project in mind or just want to say hi? I'm always open to new opportunities and interesting conversations.
        </p>
        <a
          href="/contact"
          class="gsap-hidden btn-primary inline-flex items-center gap-2"
          style="font-size: 1rem; padding: 0.85rem 2.25rem;"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
          Contact Me
        </a>
      </div>
    </section>

    <!-- Tech Stack Reference -->
    <section id="tech-ref" class="relative py-16 px-6 text-center">
      <div class="container mx-auto">
        <p class="section-label gsap-hidden" style="font-size: 0.7rem; letter-spacing: 0.2em; color: var(--green-primary); opacity: 0.7; margin-bottom: 0.5rem;">// under_the_hood</p>
        <p class="gsap-hidden" style="color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 1.25rem;">
          Curious how this site is built and deployed?
        </p>
        <a
          href="/tech"
          class="gsap-hidden tech-ref-btn"
        >
          <span style="opacity: 0.6;">&gt;</span> View Tech Stack &amp; Pipeline
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .tech-ref-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    color: var(--green-primary);
    border: 1px solid rgba(0, 255, 65, 0.3);
    padding: 0.5rem 1.25rem;
    border-radius: 4px;
    text-decoration: none;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .tech-ref-btn:hover {
    border-color: rgba(0, 255, 65, 0.6);
    box-shadow: 0 0 12px rgba(0, 255, 65, 0.15);
  }
</style>
